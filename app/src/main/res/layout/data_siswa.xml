<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:padding="10dp"
        android:background="@color/gray">

        <ImageView
            android:id="@+id/foto_siswa"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentLeft="true" />

        <TextView
            android:id="@+id/nama_siswa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/color_strip"
            android:layout_alignTop="@id/foto_siswa"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/foto_siswa"
            android:text="Nama Siswa"
            android:textSize="24dp" />

        <TextView
            android:id="@+id/ipk_siswa_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/nama_siswa"
            android:layout_alignLeft="@id/nama_siswa"
            android:text="IPK"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/ipk_siswa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/nama_siswa"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:layout_toRightOf="@id/ipk_siswa_txt"
            android:text="IPK"
            android:textSize="16dp" />

        <ImageView
            android:id="@+id/color_strip"
            android:layout_width="50dp"
            android:layout_height="3dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="0dp"
            android:layout_toEndOf="@+id/foto_siswa"
            android:background="@color/black" />
    </RelativeLayout>


</RelativeLayout>